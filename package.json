{
  "name": "diskusi-bisnis",
  "version": "1.0.0",
  "description": "Forum Q&A UMKM Indonesia - Full Stack Application",
  "scripts": {
    "dev": "node dev.js",
    "dev:concurrent": "concurrently --kill-others-on-fail --prefix-colors \"blue,green\" --prefix \"[{name}]\" \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rimraf node_modules backend/node_modules frontend/node_modules",
    "clean:win": "rmdir /s /q node_modules backend\\node_modules frontend\\node_modules",
    "setup": "npm run install:all && npm run db:setup",
    "db:setup": "cd backend && npm run db:migrate && npm run db:seed",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "kill-ports": "npx kill-port 3000 5000",
    "reset": "npm run clean && npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "forum",
    "umkm",
    "bisnis",
    "indonesia",
    "nextjs",
    "nodejs",
    "postgresql"
  ],
  "author": "DiskusiBisnis Team",
  "license": "MIT"
}
